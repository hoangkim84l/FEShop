{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths":{
      "@models/*" : ["app/models/*"],
      "@providers/*" : ["app/providers/*"],
      "@services/*" : ["app/services/*"],
      "@environments/*" : ["environments/*"]
    }
  }
}
